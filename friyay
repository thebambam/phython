n = int(input("Enter an number: ")) #Variable with an input function to allow user to input data.

output = "true" if n >= 100 else "false" #output a true if user inputs (n) 100 or higher else false if lower.
print(output) #results of the input vs output


###############
#Spathiphyllum#
###############
user_input = input("Enter a word: ") #Input function

if user_input == "Spathiphyllum": # If input is defined word print...
    print("Yes - Spathiphyllum is the best plant ever!")
elif user_input == "spathiphyllum": #elif is basically or
    print("No, I want a big Spathiphyllum!")
else: # after all that if its anything else print this
    print("Spathiphyllum! Not [input]!")




def calculate_discounted_value(value):
    discount_percent = 18
    discount_amount = value * (discount_percent / 100)
    discounted_value = value - discount_amount
    return discounted_value

input_value = 100
discounted_value = calculate_discounted_value(input_value)
print("Discounted value: ", discounted_value)


